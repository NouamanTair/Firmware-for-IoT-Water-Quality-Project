<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/login_page2"
    tools:context=".MainActivity2">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp"/>

    <!-- Drinking Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/drinkingButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Drinking"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#009dfe"
        android:layout_marginTop="32dp"/>

    <!-- Agriculture Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/agricultureButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Agriculture"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@+id/drinkingButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#0D9276"
        android:layout_marginTop="16dp"/>

    <!-- Aquaculture Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/aquacultureButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Aquaculture"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@+id/agricultureButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#00008B"
        android:layout_marginTop="16dp"/>

    <!-- Industrial Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/industrialButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Industrial"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@+id/aquacultureButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#652D91"
        android:layout_marginTop="16dp"/>

    <!-- Domestic Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/domesticButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Domestic"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@+id/industrialButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#7F27FF"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
